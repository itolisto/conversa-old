{% extends "admin/adminBase.twig" %}

{% block content %}
    <div class="row">
        <div class="col-lg-12" style="margin-top:30px">
            <div class="alert alert-danger">
                <strong>{{lang.messageConfirmDeleteBusiness}}</strong>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            {% include "admin/alerts.twig" %}
            <form role="form" method="post" action="{{ROOT_URL}}/admin/business/delete/{{id}}" enctype="multipart/form-data">
                <input type="submit" name="submit_cancel" class="btn btn-success btn-lg btn-block" value="{{lang.btnCancel}}" />
                <input type="submit" name="submit_delete" class="btn btn-danger btn-lg btn-block" value="{{lang.btnDelete}}" />
            </form>
        </div>
    </div>
{% endblock %}
